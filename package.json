  "keywords": [
    "teleprompter",
    "electron",
    "macos",
    "presentation"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "node-gyp": "^10.0.0"
  },
  "dependencies": {
    "node-addon-api": "^8.5.0"
  }
}
